{% form_theme form 'Form/form_div_layout.twig' %}

<div class="ec-headerSearch">
    <form method="get" class="searchform" action="{{ path('product_list') }}">
        <div class="ec-headerSearch__category" style="width:40%;    float: left; ">
            <div class="ec-select ec-select_search" style="width:100%; ">
                {{ form_widget(form.category_id, {'id': null, 'attr': {'class': 'category_id'}}) }}
            </div>
        </div>
        <div class="ec-headerSearch__keyword" style="width:60%; float: left;" > 
            <div class="ec-input" style="width:100%" >	
                {{ form_widget(form.name, {'id': null, 'attr': {'class': 'search-name', 'placeholder' : 'common.search_keyword' }} ) }}
                <button class="ec-headerSearch__keywordBtn" type="submit"> 
                    <div  class="ec-icon">
                        <img src="{{ asset('assets/icon/search-dark.svg') }}">
                    </div>
                </button>
            </div>
        </div>
    </form>
</div>
